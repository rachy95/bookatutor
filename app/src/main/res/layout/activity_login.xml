<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
    android:background="@android:color/white" >

        <ImageView
            android:id="@+id/appLogo"
            android:layout_width="97dp"
            android:layout_height="73dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="25dp"
            android:contentDescription="@string/app_name"
            app:srcCompat="@mipmap/ic_app_name" />

        <AutoCompleteTextView
            android:id="@+id/firstName"
            android:layout_width="279dp"
            android:layout_height="49dp"
            android:layout_below="@id/appLogo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="72dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:hint="@string/firstName"
            android:inputType="textPersonName"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary" />

        <AutoCompleteTextView
            android:id="@+id/email"
            android:layout_width="279dp"
            android:layout_height="49dp"
            android:layout_below="@id/firstName"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:background="@drawable/textbox_background"
            android:ems="10"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:padding="10dp"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:selectAllOnFocus="true"
            android:textColor="@color/colorPrimary"
            android:textColorHint="@color/colorPrimary" />

        <Button
            android:id="@+id/btn_book_session"
            android:layout_width="279dp"
            android:layout_height="49dp"
            android:layout_below="@id/email"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="54dp"
            android:background="@drawable/button_background"
            android:onClick="bookSession"
            android:text="@string/button_bookSession"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/btn_leave_review"
            android:layout_width="279dp"
            android:layout_height="49dp"
            android:layout_below="@id/btn_book_session"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="54dp"
            android:background="@drawable/button_background"
            android:text="@string/button_leaveReview"
            android:textColor="@android:color/white" />


    </android.widget.RelativeLayout>
</ScrollView>